<resources>

    <style name="Theme.BlogNerdRanch" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orangeDark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textColorPrimary">@color/grayDark</item>
        <!-- custom attributes, see attrs.xml -->
        <item name="textAppearanceArticleAuthor">@style/TextAppearance.BlogNerdRanch.ArticleAuthor</item>
        <item name="textAppearanceArticleBody">@style/TextAppearance.BlogNerdRanch.ArticleBody</item>
        <item name="textAppearanceArticleMetadata">@style/TextAppearance.BlogNerdRanch.ArticleMetadata</item>
        <item name="textAppearanceArticleTitle">@style/TextAppearance.BlogNerdRanch.ArticleTitle</item>
        <item name="textAppearanceArticleTitleLarge">@style/TextAppearance.BlogNerdRanch.ArticleTitle.Large</item>
    </style>

    <style name="TextAppearance.BlogNerdRanch.ArticleAuthor" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.BlogNerdRanch.ArticleBody" parent="TextAppearance.AppCompat">
        <item name="fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.BlogNerdRanch.ArticleMetadata" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/grayMedium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.BlogNerdRanch.ArticleTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.BlogNerdRanch.ArticleTitle.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
